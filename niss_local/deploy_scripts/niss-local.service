[Unit]
Description=niss-local service
After=local-fs.target network.target

[Service]
Type=simple
User=deploy
Group=deploy
WorkingDirectory=/home/deploy
ExecStart=/home/deploy/run_current
ExecStop=/home/deploy/stop_current
EnvironmentFile=/home/deploy/env
Environment=LANG=en_US.utf8
LimitNOFILE=65535
UMask=0027
SyslogIdentifier=niss-local
Restart=always
StartLimitAction=none

[Install]
WantedBy=multi-user.target
